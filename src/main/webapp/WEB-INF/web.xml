<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>TaskServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlet.TaskServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChangeStatusServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlet.ChangeStatusServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddTaskServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlet.AddTaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TaskServlet</servlet-name>
    <url-pattern>/task.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangeStatusServlet</servlet-name>
    <url-pattern>/change.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddTaskServlet</servlet-name>
    <url-pattern>/add.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
